{
  "manifest_version": 3,
  "name": "인사이트",
  "description": "보이는 모든것을 읽어드립니다",
  "version": "1.0",
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_title": "Open the extension",
    "default_icon": "icon.png",
    "type": "browser_action"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "sidePanel"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://item.gmarket.co.kr/Item?*",
        "https://www.coupang.com/vp/products/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["https://localhost:8000/*"]
}
